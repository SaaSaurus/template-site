---
const {menu} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>SELF School</title>
    <link rel="stylesheet" type="text/css" href={Astro.resolve("../styles/global.css")}>
</head>
<body>

<div x-data={"{ isOpen: false }"} x-on:mouseenter="isOpen = true" x-on:mouseleave="isOpen = false" class="relative flex items-center md:w-auto">
    <div class="relative z-10 flex items-center px-4 py-2 ml-4 text-primary cursor-pointer md:w-auto md:pl-0 hover:text-tertiary focus:outline-none transition duration-300">
        <a href="{menu.name}"><span>{menu.name}</span></a>
        <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path>
    </svg>
    </div>

    <div x-show="isOpen" x-transition:enter="transition ease-out duration-200" x-transition:enter-start="opacity-0 translate-y-1" x-transition:enter-end="opacity-100 translate-y-0" x-transition:leave="transition ease-in duration-150" x-transition:leave-start="opacity-100 translate-y-0" x-transition:leave-end="opacity-0 translate-y-1" class="absolute left-0 top-0 z-20 w-full -ml-0 overflow-hidden transform bg-secondary border-2 border-black rounded-lg shadow-xl mt-12 lg:-ml-24 lg:left-1/2 md:w-48" style="display: none;">
        {menu.items.map((item) => (
            <a href="#_" class="block p-4 px-5 text-lg text-black capitalize cursor-pointer hover:bg-black hover:text-white transition duration-300">
                {item.name}
            </a>
        ))}
    </div>
</div>

<!-- AlpineJS Library -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/alpinejs/2.8.0/alpine.js"></script>

</body>
</html>