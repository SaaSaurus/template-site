<section class="pt-36 pb-32 bg-secondary mt-12 overflow-hidden">
    <div class="px-20 mx-auto max-w-screen-2xl">
        <div class="flex flex-col lg:flex-row justify-between">
            <div class="w-full lg:w-1/3 lg:pr-10">
                <div class="relative max-w-lg mx-auto leading-6 text-center text-gray-700 border-gray-200 lg:text-left mr-12">
                    <h1 class="text-5xl font-extrabold text-primary sm:text-3xl sm:leading-none md:text-7xl xl:text-7xl">{header}<Typewriter texts={site.hero.typewriter}></Typewriter></h1>
                    <p class="pr-5 mx-0 my-5 text-base text-left text-gray-500 lg:my-8 xl:text-lg">
                        {subheader}
                    </p>
                    <form action="https://app.convertkit.com/forms/[YOUR-FORM-ID]/subscriptions" method="post" data-sv-form="[YOUR-FORM-ID]" data-uid="[YOUR-UID]" data-version="5" class="relative flex items-center max-w-md mx-auto mt-12 overflow-hidden text-center rounded-full">
                        <input type="email" name="email_address" placeholder="Email Address" class="w-full h-12 px-6 py-2 font-medium text-primary focus:outline-none bg-gray-200">
                        <span class="relative top-0 right-0 block"> 
                            <button type="submit" data-element="submit" class="inline-flex items-center w-32 h-12 px-8 text-base font-bold leading-6 text-secondary transition duration-150 ease-in-out bg-primary border border-transparent focus:outline-none hover:bg-tertiary">
                                Sign Up
                            </button>
                        </span>
                    </form>
                </div>
            </div>
            <div class="relative w-full lg:w-3/5 lg:mt-0">
                <img src={`/${site.hero.image}`} class="relative z-10 p-0 transform -skew-y-2 shadow-2xl rounded-xl lg:scale-110">
                <div class="absolute top-0 right-0 w-full h-full mt-4 -mr-5 transform scale-125 rotate-45">
